    <resultMap id="AllInfoResultMap" type="BannerBean">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="imgurl" property="imgUrl" jdbcType="VARCHAR"/>
